# ========================================
# SportSync AI - Environment Configuration
# ========================================

# ========= LLM Providers =========
# استخدم واحد على الأقل من التالي:

# OpenAI (GPT-4, GPT-4o, GPT-5, o4-mini)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_BASE_URL=
OPENAI_ORG=

# استخدام OpenAI لتوليد الصور (اختياري - افتراضياً معطل)
USE_OPENAI=0

# Groq (Llama 3.1, Mixtral - سريع ومجاني)
GROQ_API_KEY=

# OpenRouter (عدة نماذج)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_REFERRER=
OPENROUTER_APP_TITLE=

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# Model Selection (Dual-Model System)
# Discovery Model: للاكتشاف والتحليل الأولي (o4-mini - سريع وذكي)
CHAT_MODEL_DISCOVERY=o4-mini
# Reasoning Model: للتفكير العميق والاستنتاجات (gpt-5 - تحليل متقدم)
CHAT_MODEL_REASONING=gpt-5

# Legacy models (backward compatibility)
REASONING_MODEL=gpt-5
INTELLIGENCE_MODEL=o4-mini
# Fallback models
REASONING_MODEL_FALLBACK=gpt-4o
INTELLIGENCE_MODEL_FALLBACK=gpt-4o-mini

# Legacy support
CHAT_MODEL=gpt-4o
CHAT_MODEL_FALLBACK=gpt-4o-mini


# ========= RunPod (Image Generation) =========
RUNPOD_API_KEY=your-runpod-api-key-here
RUNPOD_COMFY_ENDPOINT_ID=your-comfy-endpoint-id
# ComfyUI (local/remote)
COMFYUI_ENDPOINT=


# ========= Voice Generation =========
# gTTS (مجاني - لا يحتاج API key)
# أو استخدم ElevenLabs للصوت الاحترافي:
ELEVENLABS_API_KEY=
# Piper / XTTS (محلي)
PIPER_CLI=
PIPER_MODEL=
PIPER_VOICE=
XTTS_ENDPOINT=

# Talking-head
LIVEPORTRAIT_CLI=
SADTALKER_CLI=

# WhisperX
WHISPERX_CLI=


# ========= YouTube API (اختياري) =========
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=
# سيتم حفظ التوكن في publishers/youtube/token.json


# ========= Application Config =========
# Debugging
REC_DEBUG=0
REC_REPAIR_ENABLED=1
REC_FAST_MODE=0
MAX_PROMPT_CHARS=6000

# Evidence Gate
EVIDENCE_GATE_ENABLED=1

# Image Generation
USE_RUNPOD_IMAGES=1
USE_IMAGE_PLACEHOLDERS=0

# Video Settings
VIDEO_ASPECT=portrait
SEED_PLACEHOLDERS=1

# ========= Streamlit (UI) =========
PUBLIC_BASE=

# ========= Server Config =========
REC_BUDGET_S=22
LLM_SEED=

# ========= Telemetry/Logging =========
# (يتم التحكم فيها من data/app_config.json)

# ========= Brand Assets =========
BRAND_FONT=assets/fonts/DejaVuSans.ttf
BRAND_LOGO=assets/brand/logo.png
