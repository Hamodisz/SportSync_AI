{
  "llm": { "model": "gpt-4o" },
  "recommendations": {
    "allow_sport_names": true,
    "min_chars": 220,
    "require_win_condition": true,
    "min_core_skills": 3
  },
  "analysis": {
    "egate": { "min_answered": 3, "min_total_chars": 120, "required_keys": [] }
  },
  "security": { "scrub_urls": true, "allowed_domains": ["sportsync.ai"] },
  "sinks": {
    "disk": { "enabled": true, "path": "./data/events.jsonl" },
    "webhook": { "enabled": false, "url": "" }
  }
}
